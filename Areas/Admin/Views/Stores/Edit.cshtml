@model ApplicationUser
@{
    ViewData["Title"] = "تعديل المتجر";
    var allCategories = ViewBag.AllCategories as List<Category>;
    var selectedCategoryIds = Model.StoreCategories.Select(sc => sc.CategoryId).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>
        <i class="fas fa-edit me-2"></i>
        تعديل متجر: @Model.StoreName
    </h3>
    <a href="/Admin/Stores" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>
        رجوع للقائمة
    </a>
</div>

<form method="post" asp-action="Edit" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <!-- معلومات المتجر -->
        <div class="col-lg-8">
            <div class="card-admin mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-store me-2"></i>
                        معلومات المتجر
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label">اسم المتجر <span class="text-danger">*</span></label>
                            <input type="text" 
                                   asp-for="StoreName" 
                                   class="form-control" 
                                   required>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">وصف المتجر</label>
                            <textarea asp-for="StoreDescription" 
                                      class="form-control" 
                                      rows="3"
                                      placeholder="اكتب وصفاً مختصراً عن المتجر..."></textarea>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">الاسم الأول <span class="text-danger">*</span></label>
                            <input type="text" 
                                   asp-for="FirstName" 
                                   class="form-control" 
                                   required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">اسم العائلة <span class="text-danger">*</span></label>
                            <input type="text" 
                                   asp-for="LastName" 
                                   class="form-control" 
                                   required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">رقم الهاتف <span class="text-danger">*</span></label>
                            <input type="tel" 
                                   asp-for="PhoneNumber" 
                                   class="form-control" 
                                   required
                                   placeholder="964xxxxxxxxx">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">البريد الإلكتروني <span class="text-danger">*</span></label>
                            <input type="email" 
                                   asp-for="Email" 
                                   class="form-control" 
                                   required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">المدينة</label>
                            <input type="text" 
                                   asp-for="City" 
                                   class="form-control"
                                   placeholder="بغداد، البصرة، إلخ...">
                        </div>

                    
                    </div>
                </div>
            </div>

            <!-- روابط المتجر -->
            <div class="card-admin mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-link me-2"></i>
                        روابط المتجر
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label">الرابط الأول</label>
                            <input type="url" 
                                   asp-for="WebsiteUrl1" 
                                   class="form-control"
                                   placeholder="https://example.com">
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">الرابط الثاني</label>
                            <input type="url" 
                                   asp-for="WebsiteUrl2" 
                                   class="form-control"
                                   placeholder="https://example.com">
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">الرابط الثالث</label>
                            <input type="url" 
                                   asp-for="WebsiteUrl3" 
                                   class="form-control"
                                   placeholder="https://example.com">
                        </div>
                    </div>
                </div>
            </div>

            <!-- الفئات -->
            <div class="card-admin mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-tags me-2"></i>
                        فئات التخصص <span class="text-danger">*</span>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        @if (allCategories != null && allCategories.Any())
                        {
                            @foreach (var category in allCategories)
                            {
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               name="selectedCategories" 
                                               value="@category.Id"
                                               id="cat_@category.Id"
                                               @(selectedCategoryIds.Contains(category.Id) ? "checked" : "")>
                                        <label class="form-check-label" for="cat_@category.Id">
                                            @category.Name
                                        </label>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-warning">
                                    لا توجد فئات متاحة. يرجى إضافة فئات أولاً.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- معلومات إضافية -->
        <div class="col-lg-4">
            <!-- حالة المتجر -->
            <div class="card-admin mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        حالة المتجر
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">حالة الاعتماد</label>
                        <div>
                            @if (Model.IsStoreApproved)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle"></i> معتمد
                                </span>
                                @if (Model.StoreApprovedAt.HasValue)
                                {
                                    <br>
                                    <small class="text-muted">
                                        تاريخ الاعتماد: @Model.StoreApprovedAt.Value.ToString("dd/MM/yyyy")
                                    </small>
                                }
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock"></i> معلق
                                </span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">حالة التفعيل</label>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-primary">
                                    <i class="fas fa-toggle-on"></i> مفعل
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-toggle-off"></i> موقف
                                </span>
                            }
                        </div>
                    </div>

                    <hr>

                    <div class="mb-2">
                        <small class="text-muted">
                            <i class="fas fa-calendar-plus"></i>
                            تاريخ التسجيل: @Model.CreatedAt.ToString("dd/MM/yyyy")
                        </small>
                    </div>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="fas fa-calendar-edit"></i>
                                آخر تحديث: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    }
                </div>
            </div>

            <!-- معلومات الروابط المعلقة -->
            @if (Model.HasPendingUrlChanges)
            {
                <div class="card-admin mb-4 border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            روابط معلقة
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">يوجد روابط معلقة تنتظر المراجعة:</p>
                        @if (!string.IsNullOrEmpty(Model.PendingWebsiteUrl1))
                        {
                            <div class="mb-1">
                                <small>• @Model.PendingWebsiteUrl1</small>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.PendingWebsiteUrl2))
                        {
                            <div class="mb-1">
                                <small>• @Model.PendingWebsiteUrl2</small>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.PendingWebsiteUrl3))
                        {
                            <div class="mb-1">
                                <small>• @Model.PendingWebsiteUrl3</small>
                            </div>
                        }
                        <a href="/Admin/Stores/PendingUrlChanges" class="btn btn-sm btn-warning mt-2">
                            <i class="fas fa-eye me-1"></i>
                            مراجعة الروابط
                        </a>
                    </div>
                </div>
            }

            <!-- أزرار الإجراءات -->
            <div class="card-admin">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            حفظ التعديلات
                        </button>
                        <a href="/Admin/Stores" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>
                            إلغاء
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // التحقق من اختيار فئة واحدة على الأقل
        document.querySelector('form').addEventListener('submit', function(e) {
            var checkboxes = document.querySelectorAll('input[name="selectedCategories"]:checked');
            if (checkboxes.length === 0) {
                e.preventDefault();
                alert('يرجى اختيار فئة واحدة على الأقل للمتجر');
            }
        });
    </script>
}
