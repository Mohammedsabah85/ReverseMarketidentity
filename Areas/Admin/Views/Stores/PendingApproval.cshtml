@model List<ApplicationUser>
@{
    ViewData["Title"] = "المتاجر المعلقة";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>المتاجر المعلقة - بانتظار الموافقة</h3>
</div>

<div class="card-admin">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-admin">
                    <thead>
                        <tr>
                            <th>اسم المتجر</th>
                            <th>المالك</th>
                            <th>رقم الهاتف</th>
                            <th>الفئات</th>
                            <th>تاريخ التسجيل</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@store.StoreName</strong>
                                    @if (!string.IsNullOrEmpty(store.StoreDescription))
                                    {
                                        <br>
                            
                                        <small class="text-muted">@store.StoreDescription</small>
                                    }
                                </td>
                                <td>@store.FirstName @store.LastName</td>
                                <td>@store.PhoneNumber</td>
                                <td>
                                    @foreach (var cat in store.StoreCategories)
                                    {
                                        <span class="badge bg-primary">@cat.Category.Name</span>
                                    }
                                </td>
                                <td>@store.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/Admin/Users/Details/@store.Id" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form method="post" asp-action="ApproveStore" asp-route-id="@store.Id" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-success btn-sm" onclick="return confirm('هل أنت متأكد من اعتماد هذا المتجر؟')">
                                                <i class="fas fa-check"></i> موافقة
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="rejectStore('@store.Id', '@store.StoreName')">
                                            <i class="fas fa-times"></i> رفض
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h5 class="text-muted">لا توجد متاجر معلقة</h5>
                <p class="text-muted">جميع المتاجر تمت الموافقة عليها</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function rejectStore(id, name) {
            var reason = prompt(`سبب رفض متجر "${name}":`);
            if (reason) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = `/Admin/Stores/RejectStore/${id}`;

                var reasonInput = document.createElement('input');
                reasonInput.type = 'hidden';
                reasonInput.name = 'reason';
                reasonInput.value = reason;
                form.appendChild(reasonInput);

                var token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    var tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}