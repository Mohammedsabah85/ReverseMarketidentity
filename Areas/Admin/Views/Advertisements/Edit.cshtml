@model EditAdvertisementViewModel
@{
    ViewData["Title"] = "تعديل الإعلان";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>تعديل الإعلان</h3>
    <a href="/Admin/Advertisements" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>
        العودة للقائمة
    </a>
</div>

<div class="card-admin">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input asp-for="Id" type="hidden">

            <!-- Basic Information -->
            <div class="row mb-4">
                <div class="col-12">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-info-circle me-2"></i>
                        المعلومات الأساسية
                    </h5>
                </div>

                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">عنوان الإعلان *</label>
                        <input asp-for="Title" class="form-control" placeholder="أدخل عنوان الإعلان">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Type" class="form-label">نوع الإعلان *</label>
                        <select asp-for="Type" class="form-control">
                            <option value="">اختر نوع الإعلان</option>
                            <option value="1">بانر</option>
                            <option value="2">شريحة</option>
                            <option value="3">شعار</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">وصف الإعلان</label>
                        <textarea asp-for="Description" class="form-control" rows="3"
                                  placeholder="وصف اختياري للإعلان..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr>

            <!-- Image Upload -->
            <div class="row mb-4">
                <div class="col-12">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-image me-2"></i>
                        صورة الإعلان
                    </h5>
                </div>

                <div class="col-12">
                    @if (!string.IsNullOrEmpty(Model.CurrentImagePath))
                    {
                        <div class="mb-3">
                            <label class="form-label">الصورة الحالية</label><br>
                            <img src="@Model.CurrentImagePath" class="img-thumbnail" style="max-height: 200px;" alt="الصورة الحالية">
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="NewImage" class="form-label">تحديث الصورة (اختياري)</label>
                        <input asp-for="NewImage" type="file" class="form-control" accept="image/*"
                               onchange="previewImage(this)">
                        <div class="form-text">اختر صورة جديدة للإعلان إذا كنت تريد تغيير الصورة الحالية (PNG, JPG, GIF - الحد الأقصى 5 ميجابايت)</div>
                        <span asp-validation-for="NewImage" class="text-danger"></span>
                    </div>

                    <div id="imagePreview" class="mt-3" style="display: none;">
                        <img id="preview" class="img-thumbnail" style="max-height: 200px;" alt="معاينة الصورة">
                    </div>
                </div>
            </div>

            <hr>

            <!-- Settings -->
            <div class="row mb-4">
                <div class="col-12">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-cogs me-2"></i>
                        إعدادات الإعلان
                    </h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="LinkUrl" class="form-label">رابط الإعلان</label>
                        <input asp-for="LinkUrl" type="url" class="form-control"
                               placeholder="https://example.com">
                        <div class="form-text">الرابط الذي سيتم التوجه إليه عند النقر على الإعلان</div>
                        <span asp-validation-for="LinkUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="DisplayOrder" class="form-label">ترتيب العرض</label>
                        <input asp-for="DisplayOrder" type="number" class="form-control"
                               min="0" max="999">
                        <div class="form-text">0 = الأول، كلما زاد الرقم كلما تأخر الترتيب</div>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label">حالة الإعلان</label>
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                            <label asp-for="IsActive" class="form-check-label">
                                نشط
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <hr>

            <!-- Date Settings -->
            <div class="row mb-4">
                <div class="col-12">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-calendar me-2"></i>
                        إعدادات التواريخ
                    </h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label">تاريخ البداية *</label>
                        <input asp-for="StartDate" type="date" class="form-control">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label">تاريخ النهاية</label>
                        <input asp-for="EndDate" type="date" class="form-control">
                        <div class="form-text">اتركه فارغاً إذا كان الإعلان بدون تاريخ انتهاء</div>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="d-flex gap-2 justify-content-end">
                <a href="/Admin/Advertisements" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>
                    إلغاء
                </a>
                <button type="submit" class="btn btn-admin">
                    <i class="fas fa-save me-2"></i>
                    حفظ التغييرات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                };

                reader.readAsDataURL(input.files[0]);
            } else {
                previewContainer.style.display = 'none';
            }
        }

        // Set minimum date to today for start date
        document.addEventListener('DOMContentLoaded', function() {
            const startDateInput = document.querySelector('input[name="StartDate"]');
            const endDateInput = document.querySelector('input[name="EndDate"]');

            // Update end date minimum when start date changes
            startDateInput.addEventListener('change', function() {
                endDateInput.min = this.value;
            });
        });
    </script>
}
