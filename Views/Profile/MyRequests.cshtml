@model MyRequestsViewModel
@{
    ViewData["Title"] = "طلباتي";
}

<div class="container-custom">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 text-primary">
                <i class="fas fa-list-alt me-3"></i>
                طلباتي
            </h1>
            <p class="text-muted">جميع الطلبات التي قمت بإضافتها</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Requests/Create" class="btn btn-custom">
                <i class="fas fa-plus me-2"></i>
                إضافة طلب جديد
            </a>
        </div>
    </div>

    @if (Model.Requests.Any())
    {
        <!-- Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="stat-card bg-primary text-white">
                    <h3>@Model.Requests.Count</h3>
                    <p>إجمالي الطلبات</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card bg-success text-white">
                    <h3>@Model.Requests.Count(r => r.Status == RequestStatus.Approved)</h3>
                    <p>معتمد</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card bg-warning text-white">
                    <h3>@Model.Requests.Count(r => r.Status == RequestStatus.Pending)</h3>
                    <p>قيد المراجعة</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card bg-danger text-white">
                    <h3>@Model.Requests.Count(r => r.Status == RequestStatus.Rejected)</h3>
                    <p>مرفوض</p>
                </div>
            </div>
        </div>

        <!-- Requests List -->
        <div class="card-custom">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>العنوان</th>
                            <th>الفئة</th>
                            <th>الموقع</th>
                            <th>الحالة</th>
                            <th>التاريخ</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model.Requests)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (request.Images != null && request.Images.Any())
                                        {
                                            <img src="@request.Images.First().ImagePath"
                                                 class="rounded me-2"
                                                 style="width: 50px; height: 50px; object-fit: cover;"
                                                 alt="@request.Title">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center"
                                                 style="width: 50px; height: 50px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                        <div>
                                            <strong>@request.Title</strong>
                                            @if (!string.IsNullOrEmpty(request.Description) && request.Description.Length > 50)
                                            {
                                                <br>
                                                <small class="text-muted">@request.Description.Substring(0, 50)...</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@request.Category.Name</span>
                                    @if (request.SubCategory1 != null)
                                    {
                                        <br>
                                        <span class="badge bg-secondary mt-1">@request.SubCategory1.Name</span>
                                    }
                                </td>
                                <td>
                                    <small>
                                        <i class="fas fa-map-marker-alt text-primary me-1"></i>
                                        @request.City - @request.District
                                    </small>
                                </td>
                                <td>
                                    @switch (request.Status)
                                    {
                                        case RequestStatus.Pending:
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock me-1"></i>
                                                في الانتظار
                                            </span>
                                            break;
                                        case RequestStatus.Approved:
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                معتمد
                                            </span>
                                            break;
                                        case RequestStatus.Rejected:
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>
                                                مرفوض
                                            </span>
                                            break;
                                        case RequestStatus.Postponed:
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-pause-circle me-1"></i>
                                                مؤجل
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <small>
                                        @request.CreatedAt.ToString("dd/MM/yyyy")
                                        <br>
                                        <span class="text-muted">@request.CreatedAt.ToString("hh:mm tt")</span>
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        @if (request.Status == RequestStatus.Approved)
                                        {
                                            <a href="/Requests/Details/@request.Id"
                                               class="btn btn-sm btn-outline-primary"
                                               title="عرض">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled title="غير معتمد">
                                                <i class="fas fa-eye-slash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.CurrentPage - 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.CurrentPage + 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="card-custom">
                <i class="fas fa-inbox fa-5x text-muted mb-4"></i>
                <h4 class="text-muted mb-3">لا توجد طلبات حتى الآن</h4>
                <p class="text-muted mb-4">ابدأ بإضافة أول طلب لك</p>
                <a href="/Requests/Create" class="btn btn-custom btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    إضافة طلب جديد
                </a>
            </div>
        </div>
    }

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a href="/Profile" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-right me-2"></i>
            العودة إلى الملف الشخصي
        </a>
    </div>
</div>

<style>
    .stat-card {
        padding: 20px;
        border-radius: 10px;
        text-align: center;
    }

        .stat-card h3 {
            margin: 0;
            font-size: 2rem;
            font-weight: bold;
        }

        .stat-card p {
            margin: 5px 0 0 0;
            font-size: 0.9rem;
            opacity: 0.9;
        }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(179, 150, 45, 0.05);
    }
</style>