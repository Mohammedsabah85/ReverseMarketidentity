                    @if (isExistingUser)
                    {
                        <i class="fas fa-sign-in-alt fa-3x text-success mb-3"></i>
                        <h1 class="h3 text-success">@Localizer["Login"]</h1>
                        <p class="text-muted">@Localizer["EnterLoginCode"]</p>
                    }
                    else if (isUnverifiedUser)
                    {
                        <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                        <h1 class="h3 text-warning">@Localizer["VerifyAccount"]</h1>
                        <p class="text-muted">@Localizer["EnterVerificationCodeToActivate"]</p>
                    }
                    else
                    {
                        <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                        <h1 class="h3 text-primary">@Localizer["VerifyCode"]</h1>
                        <p class="text-muted">@Localizer["EnterVerificationCodeSent"]</p>
                    }

                    <p class="fw-bold text-primary">@ViewBag.PhoneNumber</p>
                    <p class="text-muted small">@Localizer["CheckWhatsApp"]</p>
                </div>

                @if (isExistingUser)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-user-check me-2"></i>
                        @Localizer["WelcomeBackLoginCodeSent"]
                    </div>
                }
                else if (isUnverifiedUser)
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Localizer["AccountExistsNeedsVerification"]
                    </div>
                }

                <form asp-action="VerifyOTP" method="post" id="otpForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="OTP" class="form-label">
                            @if (isExistingUser)
                            {
                                <text>@Localizer["LoginCode"] *</text>
                            }
                            else
                            {
                                <text>@Localizer["VerificationCode"] *</text>
                            }
                        </label>
                        <div class="otp-input-container">
                            <input type="text" class="otp-input" maxlength="1" autocomplete="off">
                            <input type="text" class="otp-input" maxlength="1" autocomplete="off">
                            <input type="text" class="otp-input" maxlength="1" autocomplete="off">
                            <input type="text" class="otp-input" maxlength="1" autocomplete="off">
                        </div>
                        <input asp-for="OTP" type="hidden" id="otpHidden">
                        <span asp-validation-for="OTP" class="text-danger"></span>
                        <div class="form-text text-center mt-2">@Localizer["Enter4DigitCode"]</div>
                    </div>

                    <button type="submit" class="btn btn-custom w-100" id="verifyBtn" disabled>
                        <i class="fas fa-check me-2"></i>
                        @if (isExistingUser)
                        {
                            <text>@Localizer["Login"]</text>
                        }
                        else
                        {
                            <text>@Localizer["VerifyCode"]</text>
                        }
                    </button>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="text-muted small mb-2">@Localizer["DidNotReceiveCode"]</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <button class="btn btn-outline-secondary btn-sm" onclick="resendOTP()" id="resendBtn">
                            <i class="fas fa-redo me-1"></i>
                            @Localizer["Resend"]
                        </button>
                        <a href="/Account/Login" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-arrow-right me-1"></i>
                            @Localizer["ChangeNumber"]
                        </a>
                    </div>

                    <div id="resendTimer" class="mt-2" style="display: none;">
                        <small class="text-muted">@Localizer["CanResendIn"] <span id="countdown">60</span> @Localizer["Seconds"]</small>
                    </div>
                </div>

                <div class="mt-4 p-3 bg-light rounded">
                    <h6 class="text-primary mb-2">
                        <i class="fas fa-shield-alt me-1"></i>
                        @Localizer["AdditionalSecurity"]
                    </h6>
                    <p class="small mb-0">
                        @if (isExistingUser)
                        {
                            <text>@Localizer["LoginCodeValid10Minutes"]</text>
                        }
                        else
                        {
                            <text>@Localizer["VerificationCodeValid10Minutes"]</text>
                        }
