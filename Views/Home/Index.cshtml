@using Microsoft.Extensions.Localization
@using ReverseMarket.Resources
@inject IStringLocalizer<SharedResource> Localizer
@inject ReverseMarket.Services.ILanguageService LanguageService
@model HomeViewModel
@{
    ViewData["Title"] = Localizer["Home"];
    var currentLang = LanguageService.GetCurrentLanguage();
}

<!-- Advertisements Slider Section -->
@if (Model.Advertisements != null && Model.Advertisements.Any())
{
    <section class="advertisements-section">
        <div class="container">
            <div id="advertisementsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">

                <!-- Indicators -->
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Advertisements.Count; i++)
                    {
                        <button type="button"
                                data-bs-target="#advertisementsCarousel"
                                data-bs-slide-to="@i"
                                class="@(i == 0 ? "active" : "")"
                                aria-current="@(i == 0 ? "true" : "false")"
                                aria-label="@Localizer["Advertisement"] @(i + 1)">
                        </button>
                    }
                </div>

                <!-- Slides -->
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Advertisements.Count; i++)
                    {
                        var ad = Model.Advertisements[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            @if (!string.IsNullOrEmpty(ad.LinkUrl))
                            {
                                <a href="@ad.LinkUrl" target="_blank">
                                    <img src="@ad.ImagePath"
                                         class="d-block w-100 advertisement-image"
                                         alt="@ad.Title"
                                         onerror="this.onerror=null; this.src='/images/placeholder-ad.png';">
                                </a>
                            }
                            else
                            {
                                <img src="@ad.ImagePath"
                                     class="d-block w-100 advertisement-image"
                                     alt="@ad.Title"
                                     onerror="this.onerror=null; this.src='/images/placeholder-ad.png';">
                            }

                            @if (!string.IsNullOrEmpty(ad.Title) || !string.IsNullOrEmpty(ad.Description))
                            {
                                <div class="carousel-caption d-none d-md-block">
                                    @if (!string.IsNullOrEmpty(ad.Title))
                                    {
                                        <h5>@ad.Title</h5>
                                    }
                                    @if (!string.IsNullOrEmpty(ad.Description))
                                    {
                                        <p>@ad.Description</p>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Controls -->
                @if (Model.Advertisements.Count > 1)
                {
                    <button class="carousel-control-prev" type="button"
                            data-bs-target="#advertisementsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">@Localizer["Previous"]</span>
                    </button>
                    <button class="carousel-control-next" type="button"
                            data-bs-target="#advertisementsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">@Localizer["Next"]</span>
                    </button>
                }
            </div>
        </div>
    </section>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1>@Localizer["Welcome"]</h1>
        <p>@Localizer["WelcomeMessage"]</p>
        <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a href="/Requests/Create" class="btn-custom">@Localizer["AddRequestNow"]</a>
            <a href="/Requests" class="btn-outline-custom">@Localizer["BrowseRequests"]</a>
        </div>
    </div>
</section>

<!-- Search Section -->
<section class="search-section">
    <div class="container">
        <form class="search-form" method="get" action="/Requests">
            <div class="flex-grow-1">
                <input type="text" name="search" class="form-control" placeholder="@Localizer["SearchPlaceholder"]">
            </div>
            <div>
                <select name="categoryId" class="form-control">
                    <option value="">@Localizer["AllCategories"]</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-custom">
                    <i class="fas fa-search me-1"></i>
                    @Localizer["Search"]
                </button>
            </div>
        </form>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <div class="section-title">
            <h2>@Localizer["BestCategories"]</h2>
            <p>@Localizer["BestCategoriesSubtitle"]</p>
        </div>

        <div class="cards-grid">
            @foreach (var category in Model.Categories.Take(8))
            {
              @*   <div class="col-lg-3 col-md-4 col-sm-6"> *@
                    <a href="/Requests?categoryId=@category.Id" class="text-decoration-none">
                        <div class="category-card">
                            <div class="category-image-container">
                                @if (!string.IsNullOrEmpty(category.ImagePath))
                                {
                                    <img src="@category.ImagePath" alt="@category.Name" class="category-image">
                                }
                                else
                                {
                                    <div class="category-placeholder">
                                        <i class="fas fa-tags"></i>
                                    </div>
                                }
                            </div>
                            <div class="category-content">
                                <h5>@category.Name</h5>
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <p class="text-muted">@(category.Description.Length > 60 ? category.Description.Substring(0, 60) + "..." : category.Description)</p>
                                }
                                else
                                {
                                    <p class="text-muted">@Localizer["DiscoverProducts"]</p>
                                }
                            </div>
                        </div>
                    </a>
               @*  </div> *@
            }
        </div>
    </div>
</section>

<!-- Recent Requests Section -->
