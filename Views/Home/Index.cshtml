                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">@Localizer["NoRecentRequests"]</h5>
                <p class="text-muted">@Localizer["BeFirstToAddRequest"]</p>
                <a href="/Requests/Create" class="btn btn-custom">
                    <i class="fas fa-plus me-2"></i>
                    @Localizer["AddFirstRequest"]
                </a>
            </div>
        }

        @if (Model.RecentRequests.Any())
        {
            <div class="text-center mt-4">
                <a href="/Requests" class="btn btn-custom">@Localizer["ViewAllRequests"]</a>
            </div>
        }
    </div>
</section>

