                            <h6 class="mt-2">@request.Title</h6>
                            <p class="text-muted small">@request.City - @request.District</p>
                            <p class="text-muted">
                                @(request.Description.Length > 80 ?
                                                            request.Description.Substring(0, 80) + "..." :
                                                            request.Description)
                        </p>
                        <a href="/Requests/Details/@request.Id" class="btn btn-outline-custom btn-sm">@Localizer["ViewDetails"]</a>
                    </div>
                </div>
           @*  </div> *@
                        }
            </div>
        }
        else
        {
