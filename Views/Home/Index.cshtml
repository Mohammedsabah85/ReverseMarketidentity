@section Scripts {
    <script>
        // فحص الإعلانات بعد تحميل الصفحة
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🔍 فحص الإعلانات...');

            const carousel = document.getElementById('advertisementsCarousel');
            if (carousel) {
                console.log('✅ Carousel موجود');

                const items = carousel.querySelectorAll('.carousel-item');
                console.log(`📊 عدد الشرائح: ${items.length}`);

                items.forEach((item, i) => {
                    const img = item.querySelector('img');
                    if (img) {
                        const isLoaded = img.complete && img.naturalHeight !== 0;
                        console.log(`${isLoaded ? '✅' : '⏳'} صورة ${i+1}: ${img.src}`);

                        // التحقق من التحميل
                        img.addEventListener('load', function() {
                            console.log(`✅ تم تحميل الصورة ${i+1}`);
                        });

                        img.addEventListener('error', function() {
                            console.error(`❌ فشل تحميل الصورة ${i+1}: ${this.src}`);
                        });
                    }
                });
            } else {
                console.error('❌ Carousel غير موجود!');
            }
        });
    </script>
}
