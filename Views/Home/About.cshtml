                        </div>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <a href="/Requests/Create" class="btn btn-custom btn-lg">
                        <i class="fas fa-plus me-2"></i>
                        @Localizer["StartNow"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
