                    </div>
                </div>

                <hr class="my-5">

                <h3 class="text-center mb-4">@Localizer["OurAdvantages"]</h3>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-clock fa-2x text-success mb-3"></i>
                            <h5>@Localizer["TimeSaving"]</h5>
                            <p>@Localizer["TimeSavingText"]</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-trophy fa-2x text-success mb-3"></i>
