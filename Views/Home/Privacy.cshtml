@using Microsoft.Extensions.Localization
@using ReverseMarket.Resources
@inject IStringLocalizer<SharedResource> Localizer
@inject ReverseMarket.Services.ILanguageService LanguageService
@{
    ViewData["Title"] = Localizer["PrivacyPolicy"];
    var siteSettings = ViewBag.SiteSettings as ReverseMarket.Models.SiteSettings;
    var currentLang = LanguageService.GetCurrentLanguage();
    var privacyContent = siteSettings?.GetPrivacyPolicy(currentLang);
}

<div class="container-custom">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card-custom">
                <div class="text-center mb-4">
                    <h1 class="display-5 text-primary">
                        <i class="fas fa-shield-alt me-3"></i>
                        @Localizer["PrivacyPolicy"]
                    </h1>
                    <p class="text-muted">@Localizer["LastUpdated"]: @(siteSettings?.UpdatedAt.ToString("dd/MM/yyyy") ?? DateTime.Now.ToString("dd/MM/yyyy"))</p>
                </div>

                <div class="privacy-content">
                    @if (!string.IsNullOrEmpty(privacyContent))
                    {
                        <!-- محتوى من قاعدة البيانات -->
                        <div class="custom-content">
                            @Html.Raw(privacyContent.Replace("\n", "<br>"))
                        </div>
                    }
                    else
                    {
                        <!-- محتوى افتراضي -->
                        <section class="mb-4">
                            <h3 class="text-primary mb-3">1. @Localizer["InformationWeCollect"]</h3>
                            <h5>@Localizer["PersonalInformation"]:</h5>
                            <ul>
                                <li>@Localizer["PersonalInfo1"]</li>
                                <li>@Localizer["PersonalInfo2"]</li>
                                <li>@Localizer["PersonalInfo3"]</li>
                                <li>@Localizer["PersonalInfo4"]</li>
                            </ul>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">2. @Localizer["HowWeUseInformation"]</h3>
                            <ul>
                                <li>@Localizer["UseInfo1"]</li>
                                <li>@Localizer["UseInfo2"]</li>
                                <li>@Localizer["UseInfo3"]</li>
                                <li>@Localizer["UseInfo4"]</li>
                                <li>@Localizer["UseInfo5"]</li>
                            </ul>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">3. @Localizer["DataProtection"]</h3>
                            <p>@Localizer["DataProtectionText"]</p>
                            <ul>
                                <li>@Localizer["Protection1"]</li>
                                <li>@Localizer["Protection2"]</li>
                                <li>@Localizer["Protection3"]</li>
                            </ul>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">4. @Localizer["InformationSharing"]</h3>
                            <p>@Localizer["SharingText"]</p>
                            <ul>
                                <li>@Localizer["Sharing1"]</li>
                                <li>@Localizer["Sharing2"]</li>
                                <li>@Localizer["Sharing3"]</li>
                            </ul>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">5. @Localizer["Cookies"]</h3>
                            <p>@Localizer["CookiesText"]</p>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">6. @Localizer["YourRights"]</h3>
                            <ul>
                                <li>@Localizer["Right1"]</li>
                                <li>@Localizer["Right2"]</li>
                                <li>@Localizer["Right3"]</li>
                                <li>@Localizer["Right4"]</li>
                            </ul>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">7. @Localizer["DataRetention"]</h3>
                            <p>@Localizer["RetentionText"]</p>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">8. @Localizer["ChildrenPrivacy"]</h3>
                            <p>@Localizer["ChildrenText"]</p>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">9. @Localizer["PolicyChanges"]</h3>
                            <p>@Localizer["PolicyChangesText"]</p>
                        </section>

                        <section class="mb-4">
                            <h3 class="text-primary mb-3">10. @Localizer["ContactUs"]</h3>
                            <p>@Localizer["ContactPrivacyText"]</p>
                            <div class="alert alert-info">
                                <i class="fas fa-envelope me-2"></i>
                                <strong>@Localizer["Email"]:</strong> @(siteSettings?.ContactEmail ?? "privacy@reversemarket.iq")<br>
                                <i class="fas fa-phone me-2"></i>
                                <strong>@Localizer["Phone"]:</strong> @(siteSettings?.ContactPhone ?? "+964 770 123 4567")
                            </div>
                        </section>
                    }
                </div>

                <div class="text-center mt-4">
                    <a href="/" class="btn btn-outline-primary">
                        <i class="fas fa-home me-2"></i>
                        @Localizer["BackToHome"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .privacy-content h3 {
        color: #b3962d;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .privacy-content h5 {
        color: var(--primary-dark);
        font-weight: 500;
        margin-top: 1rem;
    }

    .privacy-content ul {
        list-style: none;
        padding-left: 0;
    }

    .privacy-content ul li {
        padding: 0.5rem 0;
        padding-left: 2rem;
        position: relative;
    }

    .privacy-content ul li::before {
        content: "\f023";
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        position: absolute;
        left: 0;
        color: var(--secondary-color);
    }

    .privacy-content p {
        line-height: 1.8;
        color: var(--text-color);
    }

    .privacy-content section {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
        border-left: 4px solid #b3962d;
    }

    .custom-content {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 10px;
        border-left: 4px solid #b3962d;
        line-height: 1.8;
    }
</style>
