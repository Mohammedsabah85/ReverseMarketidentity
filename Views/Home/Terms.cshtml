@using Microsoft.Extensions.Localization
@using ReverseMarket.Resources
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["TermsOfUse"];
}

<div class="container-custom">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card-custom">
                <div class="text-center mb-4">
                    <h1 class="display-5 text-primary">
                        <i class="fas fa-file-contract me-3"></i>
                        @Localizer["TermsOfUse"]
                    </h1>
                    <p class="text-muted">@Localizer["LastUpdated"]: @DateTime.Now.ToString("dd/MM/yyyy")</p>
                </div>

                <div class="terms-content">
                    <section class="mb-4">
                        <h3 class="text-primary mb-3">1. @Localizer["Introduction"]</h3>
                        <p>@Localizer["TermsIntroText"]</p>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">2. @Localizer["AcceptanceOfTerms"]</h3>
                        <p>@Localizer["AcceptanceText"]</p>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">3. @Localizer["UserRegistration"]</h3>
                        <ul>
                            <li>@Localizer["RegistrationRule1"]</li>
                            <li>@Localizer["RegistrationRule2"]</li>
                            <li>@Localizer["RegistrationRule3"]</li>
                            <li>@Localizer["RegistrationRule4"]</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">4. @Localizer["UserResponsibilities"]</h3>
                        <ul>
                            <li>@Localizer["Responsibility1"]</li>
                            <li>@Localizer["Responsibility2"]</li>
                            <li>@Localizer["Responsibility3"]</li>
                            <li>@Localizer["Responsibility4"]</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">5. @Localizer["ProhibitedActivities"]</h3>
                        <ul>
                            <li>@Localizer["Prohibited1"]</li>
                            <li>@Localizer["Prohibited2"]</li>
                            <li>@Localizer["Prohibited3"]</li>
                            <li>@Localizer["Prohibited4"]</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">6. @Localizer["IntellectualProperty"]</h3>
                        <p>@Localizer["IntellectualPropertyText"]</p>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">7. @Localizer["LimitationOfLiability"]</h3>
                        <p>@Localizer["LiabilityText"]</p>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">8. @Localizer["TerminationOfService"]</h3>
                        <p>@Localizer["TerminationText"]</p>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">9. @Localizer["ChangesToTerms"]</h3>
                        <p>@Localizer["ChangesText"]</p>
                    </section>

                    <section class="mb-4">
                        <h3 class="text-primary mb-3">10. @Localizer["ContactUs"]</h3>
                        <p>@Localizer["ContactTermsText"]</p>
                        <div class="alert alert-info">
                            <i class="fas fa-envelope me-2"></i>
                            <strong>@Localizer["Email"]:</strong> info@reversemarket.iq<br>
                            <i class="fas fa-phone me-2"></i>
                            <strong>@Localizer["Phone"]:</strong> +964 770 123 4567
                        </div>
                    </section>
                </div>

                <div class="text-center mt-4">
                    <a href="/" class="btn btn-outline-primary">
                        <i class="fas fa-home me-2"></i>
                        @Localizer["BackToHome"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .terms-content h3 {
        color: #b3962d;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .terms-content ul {
        list-style: none;
        padding-left: 0;
    }

    .terms-content ul li {
        padding: 0.5rem 0;
        padding-left: 2rem;
        position: relative;
    }

    .terms-content ul li::before {
        content: "\f00c";
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        position: absolute;
        left: 0;
        color: var(--secondary-color);
    }

    .terms-content p {
        line-height: 1.8;
        color: var(--text-color);
    }

    .terms-content section {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
        border-left: 4px solid #b3962d;
    }
</style>