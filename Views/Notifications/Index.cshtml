@model List<ReverseMarket.Models.Notification>
@{
    ViewData["Title"] = "الإشعارات";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-bell me-2"></i>
                            الإشعارات
                        </h4>
                        <div>
                            @if (Model.Any(n => !n.IsRead))
                            {
                                <form asp-action="MarkAllAsRead" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-light btn-sm">
                                        <i class="fas fa-check-double"></i>
                                        تحديد الكل كمقروء
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                            <p class="text-muted">لا توجد إشعارات حالياً</p>
                        </div>
                    }
                    else
                    {
                        <div class="notifications-list">
                            @foreach (var notification in Model)
                            {
                                <partial name="_NotificationItem" model="notification" />
                            }
                        </div>
                    }
                </div>
            </div>

            @* التصفح إذا كان هناك الكثير من الإشعارات *@
            @if (Model.Count >= 50)
            {
                <div class="text-center mt-3">
                    <p class="text-muted">عرض آخر 50 إشعار</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .notifications-list {
        max-height: 800px;
        overflow-y: auto;
    }

        .notifications-list::-webkit-scrollbar {
            width: 8px;
        }

        .notifications-list::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .notifications-list::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

            .notifications-list::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
</style>